<UserControl x:Class="TabSwitcher.MyTabSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabSwitcher"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="230">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="btnPrevious" Width="115" Click="btnPrevious_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Img/arrow_back.png" />
                <TextBlock Text="Предыдущая" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button   x:Name="btnNext" Width="115" Click="btnNext_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Следующая" VerticalAlignment="Center"/>
                <Image Source="/Img/arrow_forward.png" />
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
